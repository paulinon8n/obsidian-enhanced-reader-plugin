{
	"name": "obsidian-enhanced-reader-plugin",
	"version": "1.6.3",
	"description": "This is an enhanced ePub reader plugin for Obsidian. Can open document with \".epub\" file extension.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"prebuild": "node ./scripts/generate-open-dyslexic.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"test": "vitest run",
		"test:watch": "vitest",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"epub",
		"obsidian",
		"obsidian-plugin",
		"enhanced-reader"
	],
	"author": "Dr. Paulo Bernardy",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^24.6.2",
		"@types/react": "^18.3.25",
		"@types/react-dom": "^18.3.7",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"builtin-modules": "^5.0.0",
		"esbuild": "^0.25.10",
		"jsdom": "^27.0.0",
		"obsidian": "latest",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"epubjs": "^0.3.93",
		"open-dyslexic": "^1.0.3",
		"react": "npm:@preact/compat@^17.0.3",
		"react-dom": "npm:@preact/compat@^17.0.3",
		"react-reader": "^1.0.2"
	}
}
